<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
    <meta name="description" content="Social network with scratch map." />
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">

                <p class="site-title">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="../../Images/logo.png" style="height: 80px" alt="Travel Map" />
                    </a>
                </p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Map", "Index", "Map")</li>
                        <li>@Html.ActionLink("Travels", "Travels", "User")</li>
                        <li>@Html.ActionLink("Feed", "Index", "Feed")</li>
                        <li>@Html.ActionLink("People Search", "PeopleSearch", "User")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Revengers.</p>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    @RenderSection("scripts", required: false)
    <script>

        $("#body").css('min-height', $(document).height() );
    </script>
</body>
</html>
